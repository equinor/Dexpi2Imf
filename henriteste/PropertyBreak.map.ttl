# Mapping to imf:Block
:PropertyBreakBlockMap a rr:TriplesMap;
  rml:logicalSource [
    rml:source "pandid.xml";
    rml:referenceFormulation ql:XPath;
    rml:iterator "//PropertyBreak"
  ] ;
  rr:subjectMap [
    rr:template "https://assetid.equinor.com/plantx#{@ID}";
    rr:termType rr:IRI;
    rr:class imf:PipingComponent, imf:Block;
  ] .

#Mapping to imf:InputTerminal
:PropertyBreakFlowInTerminal a rr:TriplesMap;
  rml:logicalSource [
    rml:source "pandid.xml";
    rml:referenceFormulation ql:XPath;
    rml:iterator """if(PropertyBreak//ConnectionPoints/@FlowIn) then
                      //PropertyBreak/ConnectionPoints/Node[position()=number(../@FlowIn)+1]
                    else(//PropertyBreak/ConnectionPoints/Node[position()=2])
                 """
  ] ;
  rr:subjectMap [
    rr:template "https://assetid.equinor.com/plantx#{@ID}";  
    rr:termType rr:IRI;
    rr:class imf:InputTerminal
  ] ;
  rr:predicateObjectMap [
    rr:predicate imf:adjacentTo;
    rr:termType rr:IRI;
    rr:objectMap [
        rr:template "https://assetid.equinor.com/plantx#{../../@ID}";
        rr:termType rr:IRI 
    ]
  ].

#Mapping to imf:OutputTerminal
:PropertyBreakFlowOutTerminal a rr:TriplesMap;
  rml:logicalSource [
    rml:source "pandid.xml";
    rml:referenceFormulation ql:XPath;
    rml:iterator """if(//PropertyBreak/ConnectionPoints/@FlowOut) then
                      //PropertyBreak/ConnectionPoints/Node[position()=number(../@FlowOut)+1]
                    else(//PropertyBreak/ConnectionPoints/Node[position()=3])
                 """
  ] ;
  rr:subjectMap [
    rr:template "https://assetid.equinor.com/plantx#{@ID}";  
    rr:termType rr:IRI;
    rr:class imf:OutputTerminal
  ] ;
  rr:predicateObjectMap [
    rr:predicate imf:adjacentTo;
    rr:termType rr:IRI;
    rr:objectMap [
        rr:template "https://assetid.equinor.com/plantx#{../../@ID}";
        rr:termType rr:IRI 
    ]
  ].